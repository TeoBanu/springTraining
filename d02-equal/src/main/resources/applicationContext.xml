<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- implies the usage of context:annotation-config tag -->
    <context:component-scan base-package="base"/>

    <bean id="productRepository" class="base.repository.ProductRepository" c:fileHandler-ref="fileHandlerProduct" primary="true">
        <property name="products">
            <list>
                <!-- inline beans -->
                <bean name="first" class="base.model.Product">
                    <property name="name" value="something"/>
                    <property name="id" value="2"/>
                </bean>

                <bean name="second" class="base.model.Product">
                    <property name="name" value="another thing"/>
                    <property name="id" value="5"/>
                </bean>
            </list>
        </property>
    </bean>

   <!-- <bean id="storeRespository" class="base.repository.StoreRepository">
        <property name="stock">
            <map key-type="base.model.Product" value-type="java.lang.Integer">
                <entry key-ref="first" value="5"/>
                <entry key-ref="second" value="7"/>
            </map>
        </property>
    </bean>
-->

    <bean id="fileHandlerProduct" class="base.util.FileHandler" c:filename="products.csv"/>
</beans>